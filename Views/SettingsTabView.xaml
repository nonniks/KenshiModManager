<UserControl x:Class="KenshiModManager.Views.SettingsTabView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:properties="clr-namespace:KenshiModManager.Properties"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             Background="#1E1E1E">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <!-- Title -->
            <TextBlock Text="{x:Static properties:Resources.SettingsTab_Title}" FontSize="24" FontWeight="Bold" Foreground="#CCCCCC" Margin="0,0,0,20"/>

            <!-- Language Selection -->
            <Border Background="#2D2D30" BorderBrush="#3E3E42" BorderThickness="1" Padding="15" Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock Text="{x:Static properties:Resources.SettingsTab_Language}" FontSize="16" FontWeight="SemiBold" Foreground="#CCCCCC"/>

                    <ComboBox Margin="0,10,0,0"
                              Background="#1E1E1E" Foreground="#CCCCCC"
                              BorderBrush="#3E3E42" Padding="10,5"
                              ItemsSource="{Binding AvailableLanguages}"
                              SelectedItem="{Binding SelectedLanguageOption}"
                              HorizontalAlignment="Left" MinWidth="200"/>
                </StackPanel>
            </Border>

            <!-- Kenshi Installation Path -->
            <Border Background="#2D2D30" BorderBrush="#3E3E42" BorderThickness="1" Padding="15" Margin="0,0,0,15">
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="{x:Static properties:Resources.SettingsTab_KenshiInstallation}" FontSize="16" FontWeight="SemiBold" Foreground="#CCCCCC"/>
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <TextBlock Text="{Binding IsKenshiPathCustom, Converter={StaticResource BoolToStatusConverter}}"
                                       FontSize="12" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding IsKenshiPathValid, Converter={StaticResource BoolToValidationConverter}}"
                                       FontSize="16" Foreground="{Binding IsKenshiPathValid, Converter={StaticResource BoolToColorConverter}}"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Grid>

                    <TextBox Text="{Binding KenshiPath, UpdateSourceTrigger=LostFocus}"
                             IsReadOnly="True"
                             Background="#1E1E1E" Foreground="#CCCCCC" BorderBrush="#3E3E42"
                             Padding="8" Margin="0,10,0,5" FontSize="13"/>

                    <TextBlock Text="{Binding KenshiPathStatus}"
                               FontSize="11" Foreground="#808080" Margin="5,0,0,10"/>

                    <Button Content="{x:Static properties:Resources.SettingsTab_Browse}" Command="{Binding BrowseKenshiPathCommand}"
                            Background="#3E3E42" Foreground="#CCCCCC" BorderBrush="#555555"
                            Padding="15,5" FontSize="13" HorizontalAlignment="Left"/>
                </StackPanel>
            </Border>

            <!-- Mods Folder Path -->
            <Border Background="#2D2D30" BorderBrush="#3E3E42" BorderThickness="1" Padding="15" Margin="0,0,0,15">
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <TextBlock Text="{x:Static properties:Resources.SettingsTab_ModsFolder}" FontSize="16" FontWeight="SemiBold" Foreground="#CCCCCC"/>
                            <TextBlock Text="{Binding ModsCount, StringFormat='({0} mods)'}"
                                       FontSize="13" Foreground="#808080" Margin="10,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <TextBlock Text="{Binding IsModsPathCustom, Converter={StaticResource BoolToStatusConverter}}"
                                       FontSize="12" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding IsModsPathValid, Converter={StaticResource BoolToValidationConverter}}"
                                       FontSize="16" Foreground="{Binding IsModsPathValid, Converter={StaticResource BoolToColorConverter}}"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Grid>

                    <TextBox Text="{Binding ModsPath, UpdateSourceTrigger=LostFocus}"
                             IsReadOnly="True"
                             Background="#1E1E1E" Foreground="#CCCCCC" BorderBrush="#3E3E42"
                             Padding="8" Margin="0,10,0,5" FontSize="13"/>

                    <TextBlock Text="{Binding ModsPathStatus}"
                               FontSize="11" Foreground="#808080" Margin="5,0,0,10"/>

                    <Button Content="{x:Static properties:Resources.SettingsTab_Browse}" Command="{Binding BrowseModsPathCommand}"
                            Background="#3E3E42" Foreground="#CCCCCC" BorderBrush="#555555"
                            Padding="15,5" FontSize="13" HorizontalAlignment="Left"/>
                </StackPanel>
            </Border>

            <!-- Workshop Folder Path -->
            <Border Background="#2D2D30" BorderBrush="#3E3E42" BorderThickness="1" Padding="15" Margin="0,0,0,15">
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <TextBlock Text="{x:Static properties:Resources.SettingsTab_WorkshopFolder}" FontSize="16" FontWeight="SemiBold" Foreground="#CCCCCC"/>
                            <TextBlock Text="{Binding WorkshopModsCount, StringFormat='({0} mods)'}"
                                       FontSize="13" Foreground="#808080" Margin="10,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <TextBlock Text="{Binding IsWorkshopPathCustom, Converter={StaticResource BoolToStatusConverter}}"
                                       FontSize="12" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding IsWorkshopPathValid, Converter={StaticResource BoolToValidationConverter}}"
                                       FontSize="16" Foreground="{Binding IsWorkshopPathValid, Converter={StaticResource BoolToColorConverter}}"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Grid>

                    <TextBox Text="{Binding WorkshopPath, UpdateSourceTrigger=LostFocus}"
                             IsReadOnly="True"
                             Background="#1E1E1E" Foreground="#CCCCCC" BorderBrush="#3E3E42"
                             Padding="8" Margin="0,10,0,5" FontSize="13"/>

                    <TextBlock Text="{Binding WorkshopPathStatus}"
                               FontSize="11" Foreground="#808080" Margin="5,0,0,10"/>

                    <Button Content="{x:Static properties:Resources.SettingsTab_Browse}" Command="{Binding BrowseWorkshopPathCommand}"
                            Background="#3E3E42" Foreground="#CCCCCC" BorderBrush="#555555"
                            Padding="15,5" FontSize="13" HorizontalAlignment="Left"/>
                </StackPanel>
            </Border>

            <!-- Action Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="{x:Static properties:Resources.SettingsTab_ResetToAutoDetect}" Command="{Binding ResetToAutoDetectCommand}"
                        Background="#3E3E42" Foreground="#CCCCCC" BorderBrush="#555555"
                        Padding="20,8" FontSize="13"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>
