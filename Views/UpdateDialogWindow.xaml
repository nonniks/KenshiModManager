<Window x:Class="KenshiModManager.Views.UpdateDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:properties="clr-namespace:KenshiModManager.Properties"
        xmlns:converters="clr-namespace:KenshiModManager.Converters"
        mc:Ignorable="d"
        Title="{x:Static properties:Resources.UpdateDialog_Title}"
        Height="550" Width="650"
        WindowStartupLocation="CenterOwner"
        Background="#1E1E1E"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow">

    <Window.Resources>
        <!-- Converters -->
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <!-- Modern Button Style -->
        <Style x:Key="ModernButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinWidth" Value="140"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3E3E42"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Primary Button Style (for Download) -->
        <Style x:Key="PrimaryButtonStyle" TargetType="{x:Type Button}" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#0E639C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1177BB"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Title -->
            <RowDefinition Height="Auto"/>
            <!-- Version info -->
            <RowDefinition Height="15"/>
            <!-- Spacer -->
            <RowDefinition Height="Auto"/>
            <!-- "What's new" header -->
            <RowDefinition Height="10"/>
            <!-- Small spacer -->
            <RowDefinition Height="*"/>
            <!-- Changelog -->
            <RowDefinition Height="20"/>
            <!-- Spacer -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
        </Grid.RowDefinitions>

        <!-- Title with icon -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
            <TextBlock Text="ðŸ”„" FontSize="28" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBlock FontSize="22" FontWeight="Bold" Foreground="#CCCCCC" VerticalAlignment="Center">
                <Run Text="{x:Static properties:Resources.UpdateDialog_NewVersionAvailable}"/>
            </TextBlock>
        </StackPanel>

        <!-- Version information -->
        <Border Grid.Row="1"
                Background="#2D2D30"
                BorderBrush="#3E3E42"
                BorderThickness="1"
                CornerRadius="4"
                Padding="15">
            <StackPanel>
                <TextBlock Foreground="#CCCCCC" FontSize="13" Margin="0,0,0,8">
                    <Run Text="{x:Static properties:Resources.UpdateDialog_CurrentVersion}" FontWeight="SemiBold"/>
                    <Run Text="{Binding CurrentVersion}" Foreground="#0E639C" FontWeight="Bold"/>
                </TextBlock>
                <TextBlock Foreground="#CCCCCC" FontSize="13">
                    <Run Text="{x:Static properties:Resources.UpdateDialog_InstalledVersion}" FontWeight="SemiBold"/>
                    <Run Text="{Binding InstalledVersion}" Foreground="#808080"/>
                </TextBlock>
            </StackPanel>
        </Border>

        <!-- "What's new" header -->
        <TextBlock Grid.Row="3"
                   Text="{x:Static properties:Resources.UpdateDialog_Changelog}"
                   FontSize="16"
                   FontWeight="SemiBold"
                   Foreground="#CCCCCC"/>

        <!-- Changelog ScrollViewer with loading indicator -->
        <Border Grid.Row="5"
                Background="#2D2D30"
                BorderBrush="#3E3E42"
                BorderThickness="1"
                CornerRadius="4">
            <Grid>
                <!-- Changelog content -->
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Disabled"
                             Padding="15">
                    <TextBlock Text="{Binding Changelog}"
                              FontFamily="Consolas"
                              FontSize="12"
                              Foreground="#CCCCCC"
                              TextWrapping="Wrap"
                              LineHeight="20"/>
                </ScrollViewer>

                <!-- Loading indicator (shown while fetching from GitHub) -->
                <Border Background="#2D2D30"
                        Visibility="{Binding IsLoadingChangelog, Converter={StaticResource BooleanToVisibilityConverter}}"
                        Padding="20">
                    <StackPanel HorizontalAlignment="Center"
                               VerticalAlignment="Center">
                        <TextBlock Text="â³" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <TextBlock Text="Fetching release notes from GitHub..."
                                  FontSize="13"
                                  Foreground="#CCCCCC"
                                  HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Action Buttons -->
        <Grid Grid.Row="7">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Download Button (Primary) -->
            <Button Grid.Column="1"
                    Content="{x:Static properties:Resources.UpdateDialog_DownloadButton}"
                    Command="{Binding DownloadCommand}"
                    Style="{StaticResource PrimaryButtonStyle}"/>

            <!-- Remind Later Button -->
            <Button Grid.Column="3"
                    Content="{x:Static properties:Resources.UpdateDialog_RemindButton}"
                    Command="{Binding RemindLaterCommand}"
                    Style="{StaticResource ModernButtonStyle}"/>

            <!-- Skip Button -->
            <Button Grid.Column="5"
                    Content="{x:Static properties:Resources.UpdateDialog_SkipButton}"
                    Command="{Binding SkipCommand}"
                    Style="{StaticResource ModernButtonStyle}"/>
        </Grid>
    </Grid>
</Window>
